<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelJournalApp.Views.TravelDetailPage">

    <StackLayout>
        <!-- Pealkirja kuvamine -->
        <Label x:Name="TitleLabel" FontAttributes="Bold" FontSize="24" HorizontalOptions="Center" />

        <!-- Pildi kuvamine -->
        <Image x:Name="TravelImage" WidthRequest="200" HeightRequest="200" Aspect="AspectFill" HorizontalOptions="Center" />

        <!-- Kirjelduse kuvamine -->
        <Label x:Name="DescriptionLabel" FontSize="18" Padding="10,0,0,0" />
        
        <Button Text="Back"
                Margin="35,25"
                Clicked="OnBackButtonClicked"/>
    </StackLayout>

</ContentPage>