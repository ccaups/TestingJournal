<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TravelJournalApp.Models"
             xmlns:converters="clr-namespace:TravelJournalApp.Converters"
             x:Class="TravelJournalApp.Views.TravelMainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Single Converter Definition -->
            <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource BlueBG}" Offset="0.1" />
            <GradientStop Color="{StaticResource YellowBG}" Offset="0.6" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ScrollView Grid.Row="0" VerticalScrollBarVisibility="Never">
                <StackLayout>
                    <!-- Travel Entry Details and Hero Image -->
                    <Grid ColumnDefinitions="*,Auto,Auto,Auto" RowDefinitions="Auto,*" Margin="25,10">
                        <!-- Labels and Image bindings here for SelectedTravel -->
                        <Label Text="{Binding SelectedTravel.Title}" 
                               Grid.Column="0"
                               FontSize="Large" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Start"
                               VerticalOptions="End"/>
                        <Label Text="{Binding SelectedTravel.TravelStartDate, StringFormat='{0:dd.MM.yyyy}'}" 
                               Grid.Column="1"
                               FontSize="Small" 
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               TranslationY="5"/>
                        <Label Text="-"
                               Grid.Column="2"
                               FontSize="Small" 
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               TranslationY="4"
                               Margin="2,0"/>
                        <Label Text="{Binding SelectedTravel.TravelEndDate, StringFormat='{0:dd.MM.yyyy}'}" 
                               Grid.Column="3"
                               FontSize="Small" 
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               TranslationY="5"/>

                        <Image x:Name="BigHeroImage"
                               Grid.Row="1"
                               Grid.ColumnSpan="4" 
                               Aspect="AspectFill"
                               HeightRequest="500"
                               Source="{Binding SelectedTravel.HeroImageSource}">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToDetailsCommand}" 
                                                      CommandParameter="{Binding SelectedTravel}" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>

                    <!-- CollectionView for Travels -->
                    <CollectionView x:Name="TravelsListView" 
                                    ItemsSource="{Binding Travels}"
                                    SelectedItem="{Binding SelectedTravel, Mode=TwoWay}"
                                    ItemsLayout="HorizontalList"
                                    Margin="25,0">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Orientation="Horizontal" Padding="5,0,5,0">
                                    <Grid RowDefinitions="Auto,*" VerticalOptions="Center">
                                        <Label Text="{Binding Title}" 
                                               FontSize="Small" 
                                               FontAttributes="None" 
                                               HorizontalOptions="Start"
                                               VerticalOptions="Center"
                                               Grid.Row="0"/>
                                        <Image x:Name="ListHeroImage"
                                               Aspect="AspectFill"
                                               HeightRequest="125"
                                               WidthRequest="125"
                                               Source="{Binding HeroImageSource}"
                                               Grid.Row="1">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding NavigateToBigHeroCommand}" CommandParameter="{Binding .}" />
                                            </Image.GestureRecognizers>
                                        </Image>
                                    </Grid>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Empty State Message -->
                    <Label Text="No travel entries found. Please add a new entry."
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           IsVisible="{Binding Travels.Count, Converter={StaticResource CountToVisibilityConverter}}" />

                </StackLayout>
            </ScrollView>
            <StackLayout Grid.Row="1" 
                     Orientation="Horizontal" 
                     Padding="15" 
                     Spacing="5"
                     HorizontalOptions="Center">
                <Button Text="Add New Travel"
                        Clicked="Add_Travel_Clicked" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>

